<div class="container">
    <h1>Usuari@s</h1>

    <div class="row">
        {{#each userList}}

        <div class="card" style="width: 18rem;">

            <img src="{{imageURL}}" class="card-img-top" alt="foto-usuari@">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{username}}</li>
                <li class="list-group-item">{{email}}</li>
                <li class="list-group-item">{{birth}}</li>
                <li class="list-group-item">{{sex}}</li>
            </ul>

            <div class="card-body">
                <form class="list-group-item mt-3" action="/perfil/editar/{{id}}" method="POST">
                    <button>Ver perfil</button>
                </form>
                <form class="list-group-item mt-3" action="/perfil/borrar/{{id}}" method="POST">
                    <button>Borrar</button>
                </form>
            </div>

        </div>
        {{/each}}
    </div>

</div>
</div>
