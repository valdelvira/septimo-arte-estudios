<div class="container">
    <h1>Lista de grupos</h1>

    <div class="row">
        {{#each groups}}

        <div class="card" style="width: 18rem;">

            <img src="{{imageURL}}" class="card-img-top" alt="foto-grupo">


            <div class="card-body">
                <h5 class="card-title"><a href="/grupos/detalles/{{id}}">{{groupName}}</a></h5>
                <form class="mt-3 block" action="/grupos/editar/{{_id}}" method="GET">
                    <button class="btn btn-dark">Editar</button>
                </form>
                <form class="mt-3 block" action="/grupos/borrar/{{_id}}" method="POST">
                    <button class="btn btn-dark">Borrar</button>
                </form>
                <form class=" mt-3 block" action="/grupos/unirse/{{_id}}" method="POST">
                    <button class="btn btn-dark">Unirse</button>
                </form>
            </div>

        </div>
        {{/each}}
    </div>

</div>
</div>



<a class="btn btn-primary" href="#" role="button">Link</a>
<button class="btn btn-primary" type="submit">Button</button>
<input class="btn btn-primary" type="button" value="Input">
<input class="btn btn-primary" type="submit" value="Submit">
<input class="btn btn-primary" type="reset" value="Reset">