<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar</h1>
            <form action="/grupos/editar/{{_id}}" method="POST"  enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="groupNameInput" class="form-label">Nombre del grupo</label>
                    <input type="text" id="groupNameInput" name="groupName" class="form-control" value={{groupName}}>
                </div>




                <div class="mb-3">
                    <label for="imageURL" class="form-label">Subir foto</label>
                    <input type="file" id="imageURL" name="imageFile" class="form-control">
                </div>
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark block"> Editar</button>
        </div>
        </form>
    </div>
</div>
</div>