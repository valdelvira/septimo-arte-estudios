<div class='container'>

    <div class='row justify-content-center'>

        <div class='col-md-6'>
            <h1>Inciar sesión</h1>
            <form action="/acceso" id="login" method="POST">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Usuario</label>
                    <input type="text" id="usernameInput" name="username" class='form-control'>
                </div>
                <div class="mb-3">
                    <label for="pwdInput" class="form-label">Contraseña</label>
                    <input type="password" id="pwdInput" name="userPwd" class='form-control'>
                </div>
                <div class='d-grid gap-2'>
                    <button type="submit" class="btn btn-dark block">Entrar</button>

                </div>
                {{#if errorMessage}}
                <div id='error'>
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>